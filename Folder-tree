│
├── .github/workflows   # CI/CD pipelines (Flutter build tests)
│   └── flutter-ci.yml
│
├── android/            # Android-specific files
├── ios/                # iOS-specific files (auto-generated)
├── lib/                # Core Flutter/Dart code
│   ├── main.dart       # App entry point
│   ├── core/
│   │   ├── constants.dart  # App constants, map style URL
│   │   └── app_router.dart # Navigation routing
│   ├── data/
│   │   ├── models/     # Data models (e.g., pmv_report.dart)
│   │   └── repository/ # Handles all API calls to Supabase
│   ├── presentation/
│   │   ├── screens/    # Full screens (map_view, report_screen)
│   │   └── widgets/    # Reusable UI components (report_button)
│   └── utils/          # Helper functions (location, time formatting)
│
├── assets/             # Icons, images, fonts
├── web/                # Auto-generated for web build (for landing page)
├── pubspec.yaml        # Flutter dependencies (CRITICAL FILE)
